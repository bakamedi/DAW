extends layout_registro

block content
    div(class="container-fluid" style="padding-top: 10%;")
        div(class="row")
            div(id="descripcion" class="col-lg-4 col-md-offset-2" style="background-color: #fff; border-radius: 15px")
                h1(class="text-primary") 
                    strong Bienvenido a Rapidin ESPOL
                div(style="color: black" class="text-justify")
                    div(class="slide")
                        figure
                            img(class="img1" alt="alt img1" src="images/login1.jpg")
                            img(class="img2" alt="alt img2" src="images/login2.jpg")
                            img(class="img2" alt="alt img3" src="images/login2.jpg")
                            img(class="img2" alt="alt img4" src="images/login2.jpg")

            div(id="Registrate" class="col-lg-3 col-md-offset-1" style="background-color: #fff; border-radius: 15px;")
                h1(class="text-primary text-center") 
                    strong Registrese
                form(action="/crear" class="form-horizontal" method="POST" onsubmit="return validarPlacaDetener()")
                    div(class="form-group" id="formInUSuario")
                        label(for="inputEmail3" class="col-sm-4 control-label") Usuario
                        div(class="col-sm-8")
                            input(type="text" class="form-control" placeholder="Usuario de la ESPOL" required name="inUsuario")
                    div(class="form-group" id="formInContrase単a")
                        label(for="inputEmail3" class="col-sm-4 control-label") Contrase単a
                        div(class="col-sm-8")
                            input(type="password" class="form-control" placeholder="Contrase単a de la ESPOL" required name="inContrase単a")
                    div(class="form-group radio")
                        label(class="col-sx-12 col-sm-offset-5")
                            input(name="optionsRadios" type="radio" checked onclick="validarTengoCarro()")
                            |   Tengo Carro
                    div(class="form-group radio ")
                        label(class="col-sx-12 col-sm-offset-5")
                            input(name="optionsRadios" type="radio" onclick="validarNoTengoCarro()")
                            |   No Tengo Carro
                    div(class="form-group" id="formInPlaca")
                        label(for="inputEmail3" class="col-sm-4 control-label") Placa
                        div(class="col-sm-8")
                            input(id="inPlaca" name="inPlaca" type="text" class="form-control" placeholder="Placa (Ej:ABC0123)" required onkeyup="validarPlaca();")
                            p
                                span(id="msmError" style="color:blue")
                    div(class="form-group" id="formInCapacidad")
                        label(for="inputEmail3" class="col-sm-4 control-label") Capacidad
                        div(class="col-sm-8")
                            input(id="inCapacidad" name="inCapacidad" type="text" class="form-control" required placeholder="3" onkeypress="return justNumbers(event)")
                    div(class="form-group" style="text-align:center")
                        button(type="submit" class="btn btn-primary") Registrate
