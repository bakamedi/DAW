extends layout

block content
	div(class="container-fluit")
	each seguir in listaSeguidor
		if seguir.usuario != usuario	
			ul(class="bloques col-md-4 col-sm-12 col-lg-3")
				li(class="cara")
					div(class="box")
						div(class="poster")
							img(alt="Imagen Perfil" src="/images/user.jpg"  class="img-responsive center-block img-circle text-center UsuImage")
						div(class="info")
							header
								h1=seguir.apellido
								span(class="subtitulo")=seguir.nombre
								p=seguir.bio
					a(class="btn btn-default" href="/guardar/#{seguir.usuario}" alt="EDITAR") seguir 
						span(class="glyphicon glyphicon-eye-open" aria-hidden="true")
	

	link(rel="stylesheet", href="/stylesheets/seguidores_siguiendo.css")